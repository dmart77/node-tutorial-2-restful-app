extends layout

block content
    h1= title
    p Welcome to our test

    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 User Info
            p(data-bind='with: current')
                strong Name:
                span(data-bind='text: fullname')
                br
                strong Age:
                span(data-bind='text: age')
                br
                strong Gender:
                span(data-bind='text: gender')
                br
                strong Location:
                span(data-bind='text: location')
                br
                strong Email:
                span(data-bind='text: email')                
        // /USER INFO

        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th Email
                    th Delete?
                tbody(data-bind='foreach: users')
                    tr 
                        td
                            a(href='#', data-bind='click: $parent.showUserInfo')
                                span(data-bind='text: username')
                        td
                            span(data-bind='text: email')
                        td
                            a(href='#', data-bind='click: $parent.deleteUser') Delete
        // /USER LIST

        // ADD USER
        h2 Add User
        #addUser
            fieldset(data-bind='with: newUser')
                input(data-bind='textInput: username', type='text', placeholder='Username')
                input(data-bind='textInput: email', type='text', placeholder='Email')
                br
                input(data-bind='textInput: fullname', type='text', placeholder='Full Name')
                input(data-bind='textInput: age', type='text', placeholder='Age')
                br
                input(data-bind='textInput: location', type='text', placeholder='Location')
                input(data-bind='textInput: gender', type='text', placeholder='gender')
                br
                button(data-bind='enable: $parent.isNewUserValid(), click: $parent.addUser') Add User                
        // /ADD USER

    // /WRAPPER